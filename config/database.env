# =============================================================================
# 데이터베이스 설정 (database.env)
# =============================================================================
DATABASE_TYPE=SQLITE

# PostgreSQL Primary/Secondary
POSTGRES_PRIMARY_HOST=postgres
POSTGRES_PRIMARY_PORT=5432
POSTGRES_PRIMARY_DB=pulseone
POSTGRES_PRIMARY_USER=postgres
POSTGRES_PRIMARY_PASSWORD=postgres123

POSTGRES_SECONDARY_HOST=postgres
POSTGRES_SECONDARY_PORT=5432
POSTGRES_SECONDARY_DB=pulseone
POSTGRES_SECONDARY_USER=postgres
POSTGRES_SECONDARY_PASSWORD=postgres123

# Backend용 PostgreSQL 환경변수 (validate-env.js에서 요구)
DB_TYPE=POSTGRES
POSTGRES_MAIN_DB_HOST=postgres
POSTGRES_MAIN_DB_PORT=5432
POSTGRES_MAIN_DB_USER=postgres
POSTGRES_MAIN_DB_PASSWORD=postgres123
POSTGRES_MAIN_DB_NAME=pulseone

# SQLite (개발용)
SQLITE_PATH=./data/db/pulseone.db
SQLITE_BACKUP_PATH=./data/backup/
SQLITE_LOGS_PATH=./data/logs/
SQLITE_TEMP_PATH=./data/temp/
SQLITE_JOURNAL_MODE=WAL
SQLITE_CACHE_SIZE=2000
SQLITE_BUSY_TIMEOUT=5000
SQLITE_FOREIGN_KEYS=true