# config/database.env - 윈도우와 Docker 모두 대응

# 메인 데이터베이스 타입
DATABASE_TYPE=SQLITE

# 🔥 플랫폼별 SQLite 경로 설정
# Docker 환경용 (절대 경로)
SQLITE_PATH=/app/data/db/pulseone.db
SQLITE_DB_PATH=/app/data/db/pulseone.db

# 윈도우 배포용 (상대 경로 - ConfigManager에서 자동 처리)
# SQLITE_PATH=./data/db/pulseone.db
# SQLITE_DB_PATH=./data/db/pulseone.db

# SQLite 성능 설정
SQLITE_JOURNAL_MODE=WAL
SQLITE_SYNCHRONOUS=NORMAL
SQLITE_CACHE_SIZE=2000
SQLITE_BUSY_TIMEOUT_MS=5000
SQLITE_FOREIGN_KEYS=true

# 디렉토리 설정 (플랫폼별 자동 해석)
SQLITE_BACKUP_PATH=/app/data/backup/
SQLITE_LOGS_PATH=/app/data/logs/
SQLITE_TEMP_PATH=/app/data/temp/

# PostgreSQL 설정
POSTGRES_PRIMARY_ENABLED=false
POSTGRES_PRIMARY_HOST=localhost
POSTGRES_PRIMARY_PORT=5432
POSTGRES_PRIMARY_DB=pulseone_main
POSTGRES_PRIMARY_USER=postgres
POSTGRES_PRIMARY_PASSWORD=postgres123