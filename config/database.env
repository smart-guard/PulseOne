# =============================================================================
# config/database.env - 범용 설정 파일
# 플랫폼을 자동으로 감지합니다 (Docker/Windows/Linux)
# =============================================================================

# 메인 데이터베이스 타입
# 옵션: SQLITE, POSTGRESQL, MARIADB, MSSQL
DATABASE_TYPE=SQLITE

# =============================================================================
# SQLite 경로 - 수정하지 마세요 (자동 감지)
# =============================================================================

# 기본 경로 (ConfigManager가 플랫폼별로 자동 변환)
SQLITE_PATH=./data/db/pulseone.db
SQLITE_DB_PATH=./data/db/pulseone.db

# 백업 및 로그 디렉토리 (자동 변환)
SQLITE_BACKUP_PATH=./data/backup/
SQLITE_LOGS_PATH=./data/logs/
SQLITE_TEMP_PATH=./data/temp/

# SQLite 성능 설정
SQLITE_JOURNAL_MODE=WAL
SQLITE_SYNCHRONOUS=NORMAL
SQLITE_CACHE_SIZE=2000
SQLITE_BUSY_TIMEOUT_MS=5000
SQLITE_FOREIGN_KEYS=true

# =============================================================================
# PostgreSQL 설정
# =============================================================================

POSTGRES_ENABLED=false
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=pulseone
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_POOL_SIZE=10
POSTGRES_SSL=false

# =============================================================================
# MariaDB/MySQL 설정
# =============================================================================

MARIADB_ENABLED=false
MARIADB_HOST=localhost
MARIADB_PORT=3306
MARIADB_DATABASE=pulseone
MARIADB_USER=root
MARIADB_PASSWORD=mariadb123
MARIADB_POOL_SIZE=10
MARIADB_CONNECTION_LIMIT=100
MARIADB_CHARSET=utf8mb4

# =============================================================================
# Microsoft SQL Server 설정
# =============================================================================

MSSQL_ENABLED=false
MSSQL_HOST=localhost
MSSQL_PORT=1433
MSSQL_DATABASE=pulseone
MSSQL_USER=sa
MSSQL_PASSWORD=MsSql123!
MSSQL_INSTANCE=
MSSQL_ENCRYPT=false
MSSQL_TRUST_SERVER_CERTIFICATE=true
MSSQL_POOL_SIZE=10