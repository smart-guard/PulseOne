# =============================================================================
# Redis 설정 (redis.env)
# =============================================================================

# Primary Redis
REDIS_PRIMARY_HOST=localhost
REDIS_PRIMARY_PORT=6379
REDIS_PRIMARY_PASSWORD_FILE=${SECRETS_DIR}/redis_primary.key
REDIS_PRIMARY_DB=0

# 복제 설정
REDIS_REPLICATION_ENABLED=true
REDIS_REPLICATION_INTERVAL_MS=100
REDIS_REPLICATION_PATTERNS=device:*,sensor:*,alarm:*

# 복제 클러스터 개수
REDIS_REPLICA_COUNT=3

# AWS ElastiCache
REDIS_REPLICA_1_NAME=AWS_ELASTICACHE
REDIS_REPLICA_1_HOST=aws.redis.cache.amazonaws.com
REDIS_REPLICA_1_PORT=6379
REDIS_REPLICA_1_PASSWORD_FILE=${SECRETS_DIR}/redis_aws.key
REDIS_REPLICA_1_SSL=true
REDIS_REPLICA_1_ENABLED=true

# Azure Cache
REDIS_REPLICA_2_NAME=AZURE_CACHE
REDIS_REPLICA_2_HOST=azure.redis.cache.windows.net
REDIS_REPLICA_2_PORT=6380
REDIS_REPLICA_2_PASSWORD_FILE=${SECRETS_DIR}/redis_azure.key
REDIS_REPLICA_2_SSL=true
REDIS_REPLICA_2_ENABLED=true

# GCP Memorystore
REDIS_REPLICA_3_NAME=GCP_MEMORYSTORE
REDIS_REPLICA_3_HOST=10.0.0.100
REDIS_REPLICA_3_PORT=6379
REDIS_REPLICA_3_PASSWORD_FILE=${SECRETS_DIR}/redis_gcp.key
REDIS_REPLICA_3_SSL=false
REDIS_REPLICA_3_ENABLED=true