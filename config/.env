# =============================================================================
# .env - PulseOne 메인 설정
# =============================================================================

# 환경 설정
NODE_ENV=development
ENV_STAGE=dev
LOG_LEVEL=info
BACKEND_PORT=3000

# 데이터베이스 자동 초기화
AUTO_INITIALIZE_ON_START=true
SKIP_IF_INITIALIZED=true
FAIL_ON_INIT_ERROR=false

# 기본 디렉토리 (플랫폼 자동 감지)
DATA_DIR=./data
LOGS_DIR=./logs
CONFIG_DIR=./config

# 모듈별 설정 파일
CONFIG_FILES=database.env,redis.env,timeseries.env,messaging.env,collector.env

# 로그 설정
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/
LOG_MAX_SIZE_MB=100
LOG_MAX_FILES=30
LOG_USE_DATE_FOLDERS=true          # 날짜별 폴더 생성
LOG_USE_HOURLY_FILES=false         # 시간별 파일 분리 (필요시)
LOG_RETENTION_DAYS=30              # 로그 보존 기간

# 시스템 설정
MAX_WORKER_THREADS=4
DEFAULT_TIMEOUT_MS=5000
MAINTENANCE_MODE=false