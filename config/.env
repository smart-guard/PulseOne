# Database Type
DB_TYPE=postgres

# PostgreSQL (Main)
POSTGRES_MAIN_DB_HOST=postgres
POSTGRES_MAIN_DB_PORT=5432
POSTGRES_MAIN_DB_USER=user
POSTGRES_MAIN_DB_PASSWORD=password
POSTGRES_MAIN_DB_NAME=pulseone

# PostgreSQL (Log) — 테스트 환경에서는 동일하게 처리하거나 제거
POSTGRES_LOG_DB_HOST=postgres
POSTGRES_LOG_DB_PORT=5432
POSTGRES_LOG_DB_USER=user
POSTGRES_LOG_DB_PASSWORD=password
POSTGRES_LOG_DB_NAME=pulseone_logs

# Redis (Main)
REDIS_MAIN_HOST=redis
REDIS_MAIN_PORT=6379
REDIS_MAIN_PASSWORD=

# Redis Replicas (optional for test)
REDIS_REPLICAS=

# Redis (Secondary)
REDIS_SECONDARY_HOST=redis
REDIS_SECONDARY_PORT=6379
REDIS_SECONDARY_PASSWORD=

# RPC Server (mock or skip in test)
RPC_HOST=localhost
RPC_PORT=4000

# InfluxDB
INFLUXDB_HOST=influx
INFLUXDB_PORT=8086
INFLUXDB_TOKEN=mytoken
INFLUXDB_ORG=pulseone
INFLUXDB_BUCKET=metrics

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Application
BACKEND_PORT=3000

# SQLite fallback
SQLITE_PATH=./db.sqlite
