# 공통 DB 타입 지정 (기본 DB 접근 시 참고용)
DB_TYPE=postgres

### [🔵 Main PostgreSQL DB]
POSTGRES_MAIN_DB_HOST=main-db.example.com
POSTGRES_MAIN_DB_PORT=5432
POSTGRES_MAIN_DB_USER=pulseone
POSTGRES_MAIN_DB_PASSWORD=your_main_db_password
POSTGRES_MAIN_DB_NAME=pulseone_main

### [🟢 Log PostgreSQL DB]
POSTGRES_LOG_DB_HOST=logs-db.example.com
POSTGRES_LOG_DB_PORT=5432
POSTGRES_LOG_DB_USER=loguser
POSTGRES_LOG_DB_PASSWORD=your_log_db_password
POSTGRES_LOG_DB_NAME=pulseone_logs

### [🟡 InfluxDB (TimeSeries)]
INFLUXDB_HOST=influxdb.example.com
INFLUXDB_PORT=8086
INFLUXDB_TOKEN=your_token
INFLUXDB_ORG=pulseone
INFLUXDB_BUCKET=metrics

### [🔴 Primary Redis]
REDIS_MAIN_HOST=redis
REDIS_MAIN_PORT=6379
REDIS_REPLICAS=redis-replica-1:6380,redis-replica-2:6381

### [⚪️ Secondary Redis (Cloud or Replica)]
REDIS_SECONDARY_HOST=cloud-redis.example.com
REDIS_SECONDARY_PORT=6379
REDIS_SECONDARY_PASSWORD=your_redis_password

### [📦 기타 서비스 포트]
BACKEND_PORT=3000
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

### [🔁 RPC 서버]
RPC_HOST=rpc-server
RPC_PORT=4000

### [🪶 SQLite (Optional)]
SQLITE_PATH=./db.sqlite
