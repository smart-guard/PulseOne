# =============================================================================
# .env.production - PulseOne 프로덕션 설정
# =============================================================================

# 환경 설정 (프로덕션)
NODE_ENV=production
ENV_STAGE=prod
LOG_LEVEL=warn
BACKEND_PORT=3000

# 데이터베이스 자동 초기화 (프로덕션에서는 비활성화)
AUTO_INITIALIZE_ON_START=false
SKIP_IF_INITIALIZED=true
FAIL_ON_INIT_ERROR=true

# 기본 디렉토리
DATA_DIR=./data
LOGS_DIR=./logs
CONFIG_DIR=./config

# 모듈별 설정 파일
CONFIG_FILES=database.env,redis.env,timeseries.env,messaging.env,collector.env

# 로그 설정 (프로덕션)
LOG_TO_CONSOLE=false
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/
LOG_MAX_SIZE_MB=500
LOG_MAX_FILES=90

# 시스템 설정 (프로덕션 최적화)
MAX_WORKER_THREADS=8
DEFAULT_TIMEOUT_MS=10000
MAINTENANCE_MODE=false