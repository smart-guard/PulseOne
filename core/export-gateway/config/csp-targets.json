{
  "version": "1.0",
  "targets": [
    {
      "name": "local_file_backup",
      "type": "file",
      "enabled": true,
      "priority": 1,
      "config": {
        "base_path": "/app/data/alarm_backups",
        "filename_template": "alarm_{timestamp}.json",
        "directory_template": "{building_id}/{year}/{month}/{day}",
        "file_format": "json",
        "create_directories": true,
        "atomic_write": true
      }
    }
  ]
}