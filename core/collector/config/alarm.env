# =============================================================================
# 알람 시스템 통합 설정 (alarm.env)
# =============================================================================

# =============================================================================
# 📧 이메일 알림 설정 (기존)
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your-app-password
ALARM_EMAIL_RECIPIENTS=admin@company.com,engineer@company.com

# =============================================================================
# 📱 Slack 알림 설정 (기존)
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# 💬 Discord 알림 설정 (기존)
# =============================================================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# =============================================================================
# 📲 SMS 알림 설정 (기존)
# =============================================================================
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.twilio.com/2010-04-01/Accounts/YOUR_ACCOUNT/Messages.json
ALARM_SMS_RECIPIENTS=+82-10-1234-5678,+82-10-9876-5432

# =============================================================================
# 🔧 알림 정책 설정 (기존)
# =============================================================================
CRITICAL_NOTIFICATION_CHANNELS=email,sms,slack,discord
HIGH_NOTIFICATION_CHANNELS=email,slack
MEDIUM_NOTIFICATION_CHANNELS=slack
NIGHT_HOUR_START=22
NIGHT_HOUR_END=6

# =============================================================================
# 🔄 알람 복구 설정 (새로 추가)
# =============================================================================

# 시스템 시작 시 활성 알람 복구 활성화 여부
ALARM_RECOVERY_ENABLED=true

# 복구할 최대 알람 수 (성능 제한)
ALARM_RECOVERY_MAX_COUNT=1000

# 복구할 최대 알람 나이 (시간 단위, 기본 7일 = 168시간)
ALARM_RECOVERY_MAX_AGE_HOURS=168

# 알람 복구 타임아웃 (밀리초)
ALARM_RECOVERY_TIMEOUT_MS=30000

# 알람 복구 재시도 횟수
ALARM_RECOVERY_RETRY_COUNT=3

# 알람 복구 배치 크기
ALARM_RECOVERY_BATCH_SIZE=100

# 복구 시 acknowledged 알람도 포함할지 여부 (false 권장)
ALARM_RECOVERY_INCLUDE_ACKNOWLEDGED=false

# 복구 로그 레벨 (DEBUG, INFO, WARN, ERROR)
ALARM_RECOVERY_LOG_LEVEL=INFO