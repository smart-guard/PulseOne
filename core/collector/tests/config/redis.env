# Docker 환경용 Redis 설정 - 연결 성공 확인됨
REDIS_PRIMARY_ENABLED=true
REDIS_PRIMARY_HOST=pulseone-redis
REDIS_PRIMARY_PORT=6379
REDIS_PRIMARY_DB=0
REDIS_PRIMARY_PASSWORD=
REDIS_PRIMARY_TIMEOUT_MS=5000
REDIS_PRIMARY_CONNECT_TIMEOUT_MS=3000

# Redis 연결 풀 설정
REDIS_POOL_SIZE=5
REDIS_POOL_MAX_IDLE=3
REDIS_POOL_MAX_ACTIVE=10
REDIS_POOL_MAX_WAIT_MS=5000
REDIS_CONNECTION_TIMEOUT_MS=30000  # 30초
REDIS_COMMAND_TIMEOUT_MS=10000     # 10초
REDIS_TCP_KEEPALIVE=true


# 데이터 저장 설정
REDIS_KEY_PREFIX=pulseone:test:
REDIS_DEFAULT_EXPIRY_S=3600
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# 테스트 전용 설정
REDIS_TEST_MODE=false
REDIS_FLUSH_ON_START=false
REDIS_AUTO_PING=true
REDIS_PING_INTERVAL_S=30
