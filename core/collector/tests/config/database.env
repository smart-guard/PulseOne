# =============================================================================
# tests/config/database.env
# 테스트 전용 데이터베이스 설정
# =============================================================================

# 기본 데이터베이스 설정
DATABASE_TYPE=SQLITE
DATABASE_ENABLED=true

# SQLite 설정 (테스트 전용)
SQLITE_ENABLED=true
SQLITE_DB_PATH=../../data/db/pulseone.db
SQLITE_TIMEOUT_MS=30000
SQLITE_JOURNAL_MODE=WAL
SQLITE_SYNCHRONOUS=NORMAL
SQLITE_AUTO_VACUUM=INCREMENTAL

# PostgreSQL 설정 (테스트에서는 비활성화)
POSTGRESQL_ENABLED=false
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_DATABASE=pulseone_test
POSTGRESQL_USERNAME=pulseone_test
POSTGRESQL_PASSWORD=test123
POSTGRESQL_SSL_MODE=disable
POSTGRESQL_MAX_CONNECTIONS=10

# MySQL/MariaDB 설정 (테스트에서는 비활성화)
MYSQL_ENABLED=false
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=pulseone_test
MYSQL_USERNAME=pulseone_test
MYSQL_PASSWORD=test123
MYSQL_CHARSET=utf8mb4

# 연결 풀 설정
DB_CONNECTION_POOL_SIZE=5
DB_CONNECTION_TIMEOUT_MS=10000
DB_QUERY_TIMEOUT_MS=30000
DB_MAX_RETRIES=3
DB_RETRY_INTERVAL_MS=1000

# 테스트 전용 설정
DB_AUTO_CREATE_SCHEMA=false
DB_DROP_TABLES_ON_START=false
DB_POPULATE_TEST_DATA=true
DB_ENABLE_FOREIGN_KEYS=true
DB_ENABLE_TRIGGERS=true

# 백업 설정
DB_AUTO_BACKUP=false
DB_BACKUP_INTERVAL_HOURS=24
DB_BACKUP_RETAIN_DAYS=7
DB_BACKUP_COMPRESSION=true

# 성능 모니터링
DB_ENABLE_QUERY_LOGGING=true
DB_SLOW_QUERY_THRESHOLD_MS=1000
DB_ENABLE_PERFORMANCE_STATS=true