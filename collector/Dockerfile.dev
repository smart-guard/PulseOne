    make -j$(nproc) && make install && \
    cd / && rm -rf /tmp/json && echo "âœ… nlohmann/json installed"

# 5. spdlog ì„¤ì¹˜ (ë¡œê¹… ë¼ì´ë¸ŒëŸ¬ë¦¬)
RUN echo "ðŸ”§ Installing spdlog..." && \
