# í…ŒìŠ¤íŠ¸ í”„ë ˆì„ì›Œí¬ (Google Test)
RUN echo "ğŸ”§ Installing Google Test..." && \
    cd /tmp && \
    git clone https://github.com/google/googletest.git && \
    cd googletest && \
    mkdir build && cd build && \
    cmake .. \
