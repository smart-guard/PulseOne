    \
    echo "üî® Building BACnet Stack as static library..." && \
    # BACnet StackÏùÑ Ï†ïÏ†Å ÎùºÏù¥Î∏åÎü¨Î¶¨Î°ú ÎπåÎìú
    make clean && \
    make BACNET_PORT=linux \
         BACNET_DEFINES="-DPRINT_ENABLED=1 -DBACAPP_ALL -DBACFILE -DINTRINSIC_REPORTING" \
         OPTIMIZATION="-O2" \
         -j$(nproc) all && \
