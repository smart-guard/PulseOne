# 10ë‹¨ê³„: ìµœì¢… ë¼ì´ë¸ŒëŸ¬ë¦¬ ê²€ì¦
# ============================================================================

RUN ldconfig && \
    echo "ğŸ” Final library verification..." && \
    echo "ğŸ“¦ Package versions and status:" && \
    (pkg-config --exists libmodbus && echo "  âœ… libmodbus: $(pkg-config --modversion libmodbus)" || echo "  âŒ libmodbus: Not found") && \
    (pkg-config --exists paho-mqtt3c && echo "  âœ… Paho MQTT C: $(pkg-config --modversion paho-mqtt3c)" || echo "  âŒ Paho MQTT C: Not found") && \
    (pkg-config --exists paho-mqttpp3 && echo "  âœ… Paho MQTT C++: $(pkg-config --modversion paho-mqttpp3)" || echo "  âŒ Paho MQTT C++: Not found") && \
    ([ -f /usr/local/include/MQTTClient.h ] && echo "  âœ… MQTT Headers: Found" || echo "  âŒ MQTT Headers: Not found") && \
    ([ -d /usr/local/include/bacnet ] && echo "  âœ… BACnet Headers: Found" || echo "  âŒ BACnet Headers: Not found") && \
    ([ -f /usr/local/include/amqp.h ] && echo "  âœ… RabbitMQ-C: Found" || echo "  âŒ RabbitMQ-C: Not found") && \
    ([ -f /usr/local/include/nlohmann/json.hpp ] && echo "  âœ… nlohmann/json: Found" || echo "  âŒ nlohmann/json: Not found") && \
    ([ -f /usr/local/include/spdlog/spdlog.h ] && echo "  âœ… spdlog: Found" || echo "  âŒ spdlog: Not found") && \
    ([ -f /usr/local/include/gtest/gtest.h ] && echo "  âœ… Google Test: Found" || echo "  âŒ Google Test: Not found") && \
    echo "ğŸ§ª Final MQTT compilation test:" && \
    cd /tmp && \
    echo '#include <MQTTClient.h>' > final_test.c && \
    echo 'int main() { printf("MQTT Final Test OK\\n"); return 0; }' >> final_test.c && \
    gcc -std=c11 final_test.c $(pkg-config --cflags --libs paho-mqtt3c) -o final_test && \
    ./final_test && \
    rm -f final_test* && \
    echo "ğŸ‰ All libraries verified and working correctly!"

