# =============================================================================
# tests/config/redis.env  
# 테스트 전용 Redis 설정
# =============================================================================

# Primary Redis 설정 (테스트에서는 선택적)
REDIS_PRIMARY_ENABLED=false
REDIS_PRIMARY_HOST=localhost
REDIS_PRIMARY_PORT=6379
REDIS_PRIMARY_DB=1
REDIS_PRIMARY_PASSWORD=
REDIS_PRIMARY_TIMEOUT_MS=5000
REDIS_PRIMARY_CONNECT_TIMEOUT_MS=3000

# Redis 연결 풀 설정
REDIS_POOL_SIZE=5
REDIS_POOL_MAX_IDLE=3
REDIS_POOL_MAX_ACTIVE=10
REDIS_POOL_MAX_WAIT_MS=5000

# Redis Cluster 설정 (테스트에서는 비활성화)
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_NODES=localhost:7000,localhost:7001,localhost:7002

# Redis Sentinel 설정 (테스트에서는 비활성화)
REDIS_SENTINEL_ENABLED=false
REDIS_SENTINEL_MASTER_NAME=mymaster
REDIS_SENTINEL_NODES=localhost:26379,localhost:26380,localhost:26381

# 데이터 저장 설정
REDIS_KEY_PREFIX=pulseone:test:
REDIS_DEFAULT_EXPIRY_S=3600
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# 실시간 데이터 설정
REDIS_REALTIME_ENABLED=false
REDIS_REALTIME_CHANNEL_PREFIX=pulseone:realtime:
REDIS_REALTIME_BATCH_SIZE=100
REDIS_REALTIME_FLUSH_INTERVAL_MS=1000

# 캐시 설정
REDIS_CACHE_ENABLED=false
REDIS_CACHE_DEFAULT_TTL_S=300
REDIS_CACHE_MAX_SIZE_MB=100

# Pub/Sub 설정 (테스트에서는 비활성화)
REDIS_PUBSUB_ENABLED=false
REDIS_PUBSUB_CHANNEL_PREFIX=pulseone:events:
REDIS_PUBSUB_MAX_CONNECTIONS=5

# 성능 모니터링
REDIS_ENABLE_MONITORING=false
REDIS_MONITOR_SLOW_QUERIES=false
REDIS_SLOW_QUERY_THRESHOLD_MS=100

# SSL/TLS 설정 (테스트에서는 비활성화)
REDIS_SSL_ENABLED=false
REDIS_SSL_CERT_FILE=
REDIS_SSL_KEY_FILE=
REDIS_SSL_CA_FILE=

# 테스트 전용 설정
REDIS_TEST_MODE=true
REDIS_FLUSH_ON_START=false
REDIS_AUTO_PING=true
REDIS_PING_INTERVAL_S=30