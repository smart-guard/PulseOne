# =============================================================================
# timeseries.env - 배포용 InfluxDB 설정
# Windows 로컬 설치 - localhost 기준
# =============================================================================

INFLUXDB_ENABLED=true
INFLUXDB_HOST=localhost
INFLUXDB_PORT=8086
INFLUXDB_ORG=pulseone
INFLUXDB_BUCKET=history
INFLUXDB_TOKEN=pulseone-default-token-change-me
INFLUXDB_SSL=false

INFLUX_BATCH_SIZE=1000
INFLUX_FLUSH_INTERVAL_SEC=10
INFLUX_RETRY_INTERVAL_SEC=5
INFLUX_MAX_RETRIES=3
INFLUX_TIMEOUT_SEC=30

INFLUX_RETENTION_POLICY_DEFAULT=30d
INFLUX_RETENTION_POLICY_RAW=7d
INFLUX_RETENTION_POLICY_HOURLY=90d
INFLUX_RETENTION_POLICY_DAILY=2y

INFLUX_BUCKET_TELEMETRY=telemetry_data
INFLUX_BUCKET_ALARMS=alarm_events
INFLUX_BUCKET_PERFORMANCE=system_metrics
INFLUX_BUCKET_AUDIT=audit_logs

INFLUX_QUERY_TIMEOUT_SEC=60
INFLUX_MAX_CONCURRENT_QUERIES=10
INFLUX_QUERY_MEMORY_LIMIT_MB=1024

INFLUX_BACKUP_ENABLED=true
INFLUX_BACKUP_INTERVAL_HOURS=12
INFLUX_BACKUP_RETENTION_DAYS=30
INFLUX_BACKUP_PATH=./data/backup/influx

# 배포용 - 개발 옵션 비활성화
DEV_INFLUX_RESET_ON_START=false
DEV_INFLUX_SEED_DATA=false
DEV_INFLUX_DEBUG_QUERIES=false
