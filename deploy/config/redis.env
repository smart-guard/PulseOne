# =============================================================================
# redis.env - 배포용 Redis 설정
# Windows 로컬 설치 - localhost 기준
# =============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PRIMARY_HOST=localhost
REDIS_PRIMARY_PORT=6379
REDIS_PRIMARY_ENABLED=true
REDIS_PRIMARY_PASSWORD=
REDIS_PRIMARY_DB=0
REDIS_PRIMARY_TIMEOUT_MS=5000
REDIS_PRIMARY_CONNECT_TIMEOUT_MS=3000

REDIS_DB_CACHE=0
REDIS_DB_SESSIONS=1
REDIS_DB_REALTIME=2
REDIS_DB_QUEUES=3

REDIS_DEFAULT_TTL_SEC=3600
REDIS_SESSION_TTL_SEC=28800
REDIS_REALTIME_TTL_SEC=300

REDIS_POOL_SIZE=5
REDIS_POOL_MAX_ACTIVE=10
REDIS_POOL_MAX_IDLE=3
REDIS_POOL_MAX_WAIT_MS=5000

REDIS_COMMAND_TIMEOUT_MS=10000
REDIS_CONNECTION_TIMEOUT_MS=30000
REDIS_TCP_KEEPALIVE=true

DEV_REDIS_DEBUG=false
DEV_REDIS_FLUSH_ON_START=false
