# =============================================================================
# security.env - 배포용 보안 설정
# 최초 배포 후 관리자가 직접 변경 필요한 항목 표시
# =============================================================================

# JWT 설정
JWT_SECRET=CHANGE-THIS-SECRET-KEY-MINIMUM-32-CHARS
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# 암호화 설정
ENCRYPTION_ENABLED=true
ENCRYPTION_ALGORITHM=AES-256-GCM
ENCRYPTION_KEY=CHANGE-THIS-ENCRYPTION-KEY-32CHARS

# 기본 관리자 계정 (최초 접속 후 반드시 변경)
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_PASSWORD=admin
ADMIN_FORCE_PASSWORD_CHANGE=true

# 세션 설정
SESSION_SECRET=CHANGE-THIS-SESSION-SECRET
SESSION_MAX_AGE_MS=86400000

# CORS 설정 (로컬 설치용)
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,PATCH

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# 보안 헤더
HELMET_ENABLED=true
HTTPS_REDIRECT=false
