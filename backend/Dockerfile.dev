# backend/Dockerfile.dev - nodemon 문제 해결
FROM node:20

# 개발 도구 설치
RUN apt-get update && apt-get install -y \
    curl \
    git \
    netcat-openbsd \
    && rm -rf /var/lib/apt/lists/*

# 작업 디렉토리 설정
WORKDIR /app

# 글로벌 패키지 설치 (nodemon 포함)
RUN npm install -g @anthropic-ai/claude-code nodemon

# package.json 복사
COPY backend/package*.json ./backend/

# 의존성 설치 (devDependencies 포함)
WORKDIR /app/backend
RUN npm install

# 소스 코드 복사
WORKDIR /app
COPY backend ./backend
COPY config ./config

# 포트 노출
EXPOSE 3000 9229

# 작업 디렉토리를 backend로 설정
WORKDIR /app/backend

# nodemon 직접 실행
CMD ["nodemon", "app.js"]