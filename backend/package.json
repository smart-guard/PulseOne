{
  "name": "backend",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "test": "jest",
    "setup": "node scripts/smart-db-initializer.js",
    "db:status": "node scripts/database-initializer.js",
    "db:init": "node scripts/database-initializer.js",
    "start:auto": "AUTO_INITIALIZE_ON_START=true node app.js",
    "dev": "nodemon app.js",
    "dev:auto": "AUTO_INITIALIZE_ON_START=true nodemon app.js",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage --verbose",
    "test:api": "jest __tests__/backend-api-comprehensive.test.js --forceExit --maxWorkers=1 --verbose",
    "test:api:original": "jest __tests__/backend-api-comprehensive.test.js --forceExit --maxWorkers=1 --verbose",
    "test:unit": "jest __tests__/repositoryFactory.test.js __tests__/apiIntegration.test.js --forceExit --maxWorkers=1 --verbose",
    "test:basic": "jest __tests__/app.test.js --forceExit --maxWorkers=1 --verbose",
    "test:all": "npm run test:basic && npm run test:unit && npm run test:api",
    "test:legacy": "jest --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@influxdata/influxdb-client": "^1.33.2",
    "amqplib": "^0.10.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-safe": "^9.1.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jayson": "^4.2.0",
    "joi": "^17.9.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "mariadb": "^3.4.5",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "mssql": "^10.0.2",
    "mysql2": "^3.14.3",
    "pg": "^8.11.3",
    "redis": "^4.7.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^30.0.5",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "routes/**/*.js",
      "app.js",
      "!**/__tests__/**",
      "!**/__mocks__/**",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.js"
    ],
    "testTimeout": 30000,
    "maxWorkers": 1,
    "forceExit": true,
    "detectOpenHandles": true
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "iot",
    "data-collection",
    "industrial",
    "modbus",
    "mqtt",
    "bacnet",
    "scada",
    "realtime"
  ],
  "author": "PulseOne Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/smart-guard/PulseOne.git"
  }
}
